{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-and-copy",
            "dependsOrder": "sequence",
            "dependsOn": [
                "dotnet: build",
                "make-plugin-dir",
                "copy-dll"
            ]
        },
        {
            "label": "dotnet: build",
            "type": "dotnet",
            "task": "build",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "make-plugin-dir",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${workspaceFolder}/.vscode/jellyfin-data/plugins/EPGStation/"
            ]
        },
        {
            "label": "copy-dll",
            "type": "shell",
            "command": "cp",
            "args": [
                "--update",
                "X68fpjc.Jellyfin.EPGStation/bin/Debug/net9.0/*.dll",
                "X68fpjc.Jellyfin.EPGStation.Infrastructure/bin/Debug/net9.0/*.dll",
                "X68fpjc.Jellyfin.EPGStation.OpenAPI/bin/Debug/net9.0/*.dll",
                "${workspaceFolder}/.vscode/jellyfin-data/plugins/EPGStation/"
            ]
        }
    ]
}